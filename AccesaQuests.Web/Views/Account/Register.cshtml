@model AccesaQuests.Web.Models.ViewsName.RegisterViewModel

@{
    ViewData["Title"] = "Registration Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Page</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to bottom, #141e30, #243b55);
            color: white;
        }

        .register-container {
            max-width: 400px;
            margin: 0 auto;
            padding: 40px;
            border-radius: 5px;
            background-color: #202b3d;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

            .register-container h2 {
                margin-bottom: 30px;
                font-weight: bold;
                text-align: center;
                color: white;
            }

            .register-container .form-group {
                margin-bottom: 20px;
            }

            .register-container label {
                font-weight: bold;
                color: white;
            }

            .register-container .form-control {
                background-color: #273747;
                border: none;
                color: #fff;
                border-radius: 3px;
                padding: 8px 12px;
            }

            .register-container .btn-primary {
                background-color: #3f84e5;
                border: none;
                color: #fff;
                border-radius: 3px;
                padding: 10px;
                font-weight: bold;
                width: 100%;
            }

                .register-container .btn-primary:hover {
                    background-color: #306cb2;
                }

            .register-container .form-check-label {
                color: #a9a9a9;
            }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="register-container">
                    <h2 class="text-white">Register</h2>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    <form method="post">
                        <div class="form-group">
                            <label for="username" class="text-white">Username:</label>
                            <input type="text" class="form-control" id="username" placeholder="Enter username" asp-for="UserName">
                        </div>
                        <div class="form-group">
                            <label for="email" class="text-white">Email:</label>
                            <input type="email" class="form-control" id="email" placeholder="Enter email" asp-for="Email">
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-white">Password:</label>
                            <input type="password" class="form-control" id="password" placeholder="Enter password" asp-for="Password">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
